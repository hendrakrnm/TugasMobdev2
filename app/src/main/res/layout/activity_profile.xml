<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal">

        <!-- Tombol Back -->


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            android:background="@android:color/transparent"
            android:contentDescription="Kembali"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="25dp"
            android:layout_gravity="start"/>




        <!-- Foto Profil Bulat -->
        <ImageView
            android:id="@+id/profile_initial"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/pp"
            android:layout_marginTop="2dp" />


        <!-- Nama -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hendra Kurnia Maliqi"
            android:textStyle="bold"
            android:textSize="20sp"

            android:layout_marginTop="16dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jondoe@gymac.id"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Alamat -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nAlamat:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jalan Mekar Wangi\nNo. 56 RT.66/16\nKota Baru, Yogyakarta 55111"
            android:textSize="14sp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="4dp" />

        <!-- Jenis Akun -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nJenis Akun:"
            android:textStyle="bold"
            android:layout_marginHorizontal="25dp"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/profile_account_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:text="Subscription 6 bulan"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Tombol Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:layout_marginTop="32dp"
            android:backgroundTint="#FF0000" />

    </LinearLayout>
</ScrollView>
